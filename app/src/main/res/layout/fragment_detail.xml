<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

<TextView
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Personaje"/>

<TextView
    android:id="@+id/labelName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="Jon Snow"/>
<TextView
    android:id="@+id/labelTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Lord Comandante de la Guardia de la noche"
    android:layout_marginTop="4dp"
    android:textStyle="italic"/>

<TextView
    android:id="@+id/labelBorn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="283 ac"/>
<TextView
    android:id="@+id/labelActor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="Kit Harington"/>

<TextView
    android:id="@+id/labelQuote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="I know nothing"/>

<TextView
    android:id="@+id/labelParents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="Ned Stark"/>
<TextView
    android:id="@+id/labelSpouse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    tools:text="Sin esposa"/>

<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    tools:text="CASA STARK"/>






</LinearLayout>